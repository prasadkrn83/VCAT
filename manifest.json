{
  "name": "VCAT",
  "version": "1.0",
  "description": "Voice Controlled Accessibility and Testing Tool",
  "manifest_version": 2,
  "permissions": ["activeTab", "declarativeContent", "storage","<all_urls>","storage"],
  "options_page": "vcat.html",
  "icons": {
    "16": "images/vcat_icon_16.png",
    "32": "images/vcat_icon_32.png",
    "48": "images/vcat_icon_48.png",
    "128": "images/vcat_icon_128.png"
  },
  "background":{
    "scripts":[
      "annyang.min.js",
      "background.js"
    ],
    "persistent":false
    
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["css/jquery.toast.min.css","css/content.css"],
      "js": ["jquery-3.3.1.min.js","jquery.toast.min.js","content.js"]
    }
  ]
}
